<div class="category_elmnt">
  <%= link_to category_path(category.id), class: 'no_link' do %>
    <div class="category_info proxima_light_font">
      <div>
        <%= image_tag category.icon %>
      </div>
      <div class="category_data">
        <h3>
          <%= category.name %>
        </h3>
        <p>
          <%= category.created_at.strftime("%Y-%m-%d") %>
        </p>
      </div>
    </div>
    <div class="category_amout proxima_light_font">
      $<%= number_with_precision(amount, precision: 2) %>
    </div>
  <% end %>
</div>